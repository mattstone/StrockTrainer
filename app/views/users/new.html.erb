<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <!-- Header -->
    <div>
      <div class="mx-auto h-16 w-16 flex items-center justify-center rounded-full bg-indigo-100">
        <i class="fas fa-chart-line text-2xl text-indigo-600"></i>
      </div>
      <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
        Start Your Trading Journey
      </h2>
      <p class="mt-2 text-center text-sm text-gray-600">
        Create your account and get $10,000 virtual money to practice with
      </p>
    </div>

    <!-- Signup Form -->
    <%= form_with model: @user, url: signup_path, method: :post, local: true, class: "mt-8 space-y-6" do |form| %>
      <% if @user.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-md p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <i class="fas fa-exclamation-circle text-red-400"></i>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800">Please fix the following errors:</h3>
              <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
                <% @user.errors.full_messages.each do |error| %>
                  <li><%= error %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      <% end %>

      <div class="rounded-md shadow-sm -space-y-px">
        <div>
          <%= form.label :email, "Email address", class: "sr-only" %>
          <%= form.email_field :email,
              class: "appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm",
              placeholder: "Email address",
              required: true,
              autofocus: true %>
        </div>
        <div>
          <%= form.label :password, "Password", class: "sr-only" %>
          <%= form.password_field :password,
              class: "appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm",
              placeholder: "Password (min 6 characters)",
              required: true %>
        </div>
        <div>
          <%= form.label :password_confirmation, "Confirm Password", class: "sr-only" %>
          <%= form.password_field :password_confirmation,
              class: "appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm",
              placeholder: "Confirm password",
              required: true %>
        </div>
      </div>

      <div>
        <%= form.submit "Create Account",
            class: "group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition duration-150 ease-in-out" %>
      </div>
    <% end %>

    <!-- What you get -->
    <div class="bg-green-50 border border-green-200 rounded-md p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <i class="fas fa-gift text-green-400"></i>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-green-800">What you'll get:</h3>
          <ul class="mt-2 text-sm text-green-700 space-y-1">
            <li>• $10,000 virtual trading portfolio</li>
            <li>• Interactive trading lessons</li>
            <li>• Real-time market data</li>
            <li>• Achievement badges and XP system</li>
            <li>• Risk-free practice environment</li>
          </ul>
        </div>
      </div>
    </div>

    <!-- Sign in link -->
    <div class="text-center">
      <p class="text-sm text-gray-600">
        Already have an account?
        <%= link_to "Sign in here", login_path, class: "font-medium text-indigo-600 hover:text-indigo-500 transition duration-150 ease-in-out" %>
      </p>
    </div>
  </div>
</div>
